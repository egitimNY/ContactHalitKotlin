<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.halit.contacthalitkotlin">
    <!-- Camera Storage permission for image pick -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".loginregister.ResetActivity"
            android:label="Reset" />
        <activity
            android:name=".loginregister.PasswordActivity"
            android:label="Forgot Password" />
        <activity
            android:name=".loginregister.RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".MainActivity"
            android:label="Contact Phone List" />
        <activity
            android:name=".BigImageActivity"
            android:label="Big Image" />
        <activity
            android:name=".AddUpdateRecordActivity"
            android:label="Update" />
        <activity
            android:name=".RecordDetailActivity"
            android:label="Detail" />
        <activity
            android:name=".loginregister.LoginActivity"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
    </application>

</manifest>